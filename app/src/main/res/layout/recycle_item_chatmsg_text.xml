<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/msgTimeContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/msgTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:maxHeight="20dp"
            android:paddingBottom="2dp"
            android:paddingEnd="7dp"
            android:paddingStart="7dp"
            android:paddingTop="2dp"
            android:text="今天10:00"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/left_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="horizontal">

        <Button
            android:id="@+id/left_msg_user"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:text=""
            android:textColor="@color/white" />

        <LinearLayout
            android:id="@+id/left_msg_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="7dp"
            android:paddingEnd="7dp"
            android:paddingStart="13dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/left_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:minHeight="20dp"
                android:text=""
                android:textColor="@color/black" />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/right_Layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"

        >

        <Button
            android:id="@+id/right_msg_user"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:text=""
            android:textColor="@color/white" />

        <LinearLayout
            android:id="@+id/right_msg_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/right_msg_user"
            android:orientation="horizontal"
            android:paddingBottom="7dp"
            android:paddingEnd="17dp"
            android:paddingStart="5dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/right_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:minHeight="20dp"
                android:text="" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>