<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 连框颜色值 -->
    <item
        android:top="-2dp"
        android:bottom="-2dp"
        android:right="0dp"
        android:left="-2dp"
        >
        <shape>
            <!-- 填充 -->
            <solid android:color="@color/transparent" /> <!-- 定义填充的颜色值 -->

            <!-- 描边 -->
            <stroke
                android:width="0.5dp"
                android:color="@color/gray" /> <!-- 定义描边的宽度和描边的颜色值 -->

            <!-- 圆角 -->
            <corners
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp" /> <!-- 设置四个角的半径 -->
            <!-- 间隔 -->
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" /> <!-- 设置各个方向的间隔 -->
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:top="1dp"
        android:bottom="1dp"
        android:right="1dp"
        android:left="0dp"
        >
        <shape>
            <!-- 填充 -->
            <solid android:color="@color/white" /> <!-- 定义填充的颜色值 -->

            <!-- 描边 -->
            <stroke
                android:width="0.5dp"
                android:color="@color/white" /> <!-- 定义描边的宽度和描边的颜色值 -->

            <!-- 圆角 -->
            <corners
                android:bottomLeftRadius="5dp"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp" /> <!-- 设置四个角的半径 -->

            <!-- 间隔 -->
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" /> <!-- 设置各个方向的间隔 -->
        </shape>
    </item>

</layer-list>