<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <!-- 填充 -->
            <solid android:color="@color/blue" /> <!-- 定义填充的颜色值 -->

            <!-- 描边 -->
            <stroke
                android:width="1dp"
                android:color="@color/blue" /> <!-- 定义描边的宽度和描边的颜色值 -->

            <!-- 圆角 -->
            <corners
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"
                android:topLeftRadius="5dp"
                android:topRightRadius="5dp" /> <!-- 设置四个角的半径 -->

            <!-- 间隔 -->
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" /> <!-- 设置各个方向的间隔 -->
        </shape>
    </item>

</layer-list>